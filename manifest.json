{
  "name": "SEMiAF",
  "description": "Search Engine MiA Filter - A browser extension to filter public health rumors.",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "css": ["css/content.css"],
      "js": [
        "js/jquery-3.5.1.min.js",
        "js/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Critical Information",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "manifest_version": 2
}
